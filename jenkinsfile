pipeline {
    agent any

    stages {
        stage('Init') {
            agent { label 'slave1' }
            options {
                timeout(time: 30, unit: 'SECONDS') // Timeout after 90 seconds to prevent hanging
            }
            steps {
                script {
                    try {
                        echo "Running Terraform init on slave1"
                        // Initialize Terraform
                        sh 'terraform init'
                    } catch (Exception e) {
                        echo "An error occurred on slave1: ${e}"
                        error("Terminating stage due to error on slave1")
                    }
                }
            }
        }
    }
    
    post {
        unsuccessful {
            echo "Job on slave1 failed or was interrupted, retrying on slave2..."

            // Retry on slave2
            build job: 'pipeline2', parameters: [string(name: 'AGENT', value: 'slave2')]
        }
    }
}
